<Window x:Class="CircleKiller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircleKiller"
        mc:Ignorable="d"
        Title="Circle Killer" Height="400" Width="600" MinHeight="400" MinWidth="600"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="statisticsLabel" HorizontalAlignment="Center"
               VerticalAlignment="Center" FontSize="18"
               Foreground="Blue" Content="Killed Circles: 0 | Actions per minute 0.0000"/>
    </Grid>
</Window>
